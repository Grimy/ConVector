JAR=../convector.jar
: foreach *.svg | $(JAR) |> java -ea -jar $(JAR) %f %o |> svg/%b.svg <all>
: foreach *.svg | $(JAR) |> java -ea -jar $(JAR) %f %o |> ps/%b.ps   <all>
: foreach *.svg | $(JAR) |> java -ea -jar $(JAR) %f %o |> pdf/%b.pdf <all>
: foreach *.svg | <all> |> \
		montage -background white \
		\( -border 1 "%b" \) \
		\( -border 1 "svg/%b.svg" \) \
		\( -border 1 "ps/%b.ps" \) \
		\( -border 1 "pdf/%b.pdf"  \) \
		-geometry 1280x720+1+1 %o |> montage/%b.png
